extends main

block general
    div(style="weight: 100%; height:100%; display: -webkit-flex; -webkit-align-items: center;display: flex;align-items: center; justify-content: center;" )
        div(style="width:300px; border-radius: 20px;  box-shadow: 0 0 3px 3px #d1d1d1; padding: 25px")
            h1(style="margin-bottom:30px;") #{title}
            form
                p
                    label Login
                    input#login.w3-input(type="text", required, placeholder="Login")
                    label Password
                    input#password.w3-input(type="password", required, placeholder="Password")
                p
                    button#w3-button(type="button", onclick="adminAuth()", disabled) Enter

    script(src="/javascripts/adminauth.js")