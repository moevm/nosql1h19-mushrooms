doctype html
html
    head
        title Mushrooms
        meta(name='viewport', content='width=device-width, initial-scale=1')

        //w3 & JVectorMap
        link(rel='stylesheet', href='https://www.w3schools.com/w3css/4/w3.css')
        link(rel='stylesheet', href='/stylesheets/jquery-jvectormap-2.0.3.css')

        link(rel='stylesheet', href='/stylesheets/layout.css')

        //JQuery & Cookie
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js')
        script(src="https://cdn.jsdelivr.net/npm/js-cookie@2/src/js.cookie.min.js")

        //JVectorMap
        script(src='/javascripts/jquery-jvectormap-2.0.3.min.js')
        script(src='http://jvectormap.com/js/jquery-jvectormap-world-mill.js')

        script(src='/javascripts/functs.js')

    body
        .w3-modal#modal
            .w3-modal-content
                #world-map(style='width: 900px; height: 600px')

        #leftSidebar.w3-sidebar.w3-bar-block.w3-card.w3-animate-left
            button.w3-bar-item.w3-button.w3-xlarge(onclick='w3_close_left()') Close ×
            #leftWrapper

        #main
            #topBarWrapper
                #flexTopWrapper
                    button#openNav.w3-button.w3-xlarge.w3-bar-item(onclick='w3_open_left()') ☰
                    script(src='/javascripts/layout.js')

                    block topbar

                    #regionWrap
                        button#openMap.params.w3-button Select region
                        button#resetRegion.w3-button &times
                        input#region(type="hidden")
            #contatiner
            #content
                block content